    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit",
            "type": "python",
            "request": "launch",
            "program": "/path/to/your/streamlit",
            "args": [
                "run",
                "/workspaces/expense_manager/main.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: main.py",
            "type": "python",
            "request": "launch",
            "program": "/workspaces/expense_manager/main.py",
            "console": "integratedTerminal",
            "args": [
                "-Xfrozen_modules=off"
            ],
            "justMyCode": true
        },
        {
            "name": "Detailed Python: main.py",
            "type": "python",
            "request": "launch",
            "program": "/workspaces/expense_manager/main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}